---
import Hero from '../components/cv/Hero.astro';
import About from '../components/cv/About.astro'
import Education from '../components/cv/Education.astro';
import Experience from '../components/cv/Experience.astro';
import Projects from '../components/cv/Projects.astro';
import Skills  from '../components/cv/Skills.astro';
---
<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="CV printable">
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
    </head>
    <body>
        <main>
            <Hero/>
            <About/>
            <Experience/>
            <Education/>
            <Projects/>
            <Skills/>
        </main>
        <style is:global>
            html {
                font-family:
                    Menlo,
                    Monaco,
                    Licuda Console,
                    "Courier New",
                    Courier,
                    monospace;
                background: #fff;
                letter-spacing: -0.025;
            }
            body,
            figure {
                margin: 0;
                padding: 0;
            }
            a {
                text-decoration: none;
            }
            ul {
                list-style: none;
                margin: 0;
                padding: 0;
            }
            *,
            *::before,
            *::after {
                box-sizing: border-box;
            }
            h1,
            h2,
            h3,
            h4 {
                margin: 0;
                font-family:
                    system-ui,
                    -apple-system,
                    BlinkMacSystemFont,
                    "Segoe UI",
                    Roboto,
                    Oxygen,
                    Ubuntu,
                    Cantarell,
                    "Open Sans",
                    "Helvetica Neue",
                    sans-serif;
            }
            p {
                color: #666;
                font-size: 0.9rem;
                line-height: 1.5;
                margin: 0;
                text-wrap: pretty;
            }
            main {
                padding: 4rem;
                margin: auto;
                width: 100%;
            }
        </style>
    </body>
</html>
