---
import Hero from '../components/cv/Hero.astro';
---
<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="CV printable">
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
    </head>
    <body>
        <Hero/>
        <style>
            html {
                font-family:
                    Menlo,
                    Monaco,
                    Licuda Console,
                    "Courier New",
                    Courier,
                    monospace;
                background: #fff;
                letter-spacing: -0.025;
            }
            body,
            figure {
                margin: 0;
                padding: 0;
            }
            a {
                text-decoration: none;
            }
            ul {
                list-style: none;
                margin: 0;
                padding: 0;
            }
            *,
            *::before,
            *::after {
                box-sizing: border-box;
            }
            h1,
            h2,
            h3,
            h4 {
                margin: 0;
                font-family:
                    system-ui,
                    -apple-system,
                    BlinkMacSystemFont,
                    "Segoe UI",
                    Roboto,
                    Oxygen,
                    Ubuntu,
                    Cantarell,
                    "Open Sans",
                    "Helvetica Neue",
                    sans-serif;
            }
            p {
                color: #888;
                font-size: 0.8rem;
                line-height: 1.5;
                margin: 0;
                text-wrap: pretty;
            }
        </style>
    </body>
</html>
