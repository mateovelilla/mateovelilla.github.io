---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Experience from "../components/Experience.astro";
import Projects from "../components/Projects.astro";
import { basics, work, projects } from "../../cv.json";
---

<Layout
	title="Portfolio's Mateo Velilla"
	description="Portfolio and blog of Mateo Velilla"
>
	<main class="px-4 min-h-screen pb-24">
		<Hero summary={basics.summary} profiles={basics.profiles}  name={basics.name} status={basics.status} image={basics.image}/>
		<Experience work={work}/>
		<Projects projects={projects}/>
	</main>
</Layout>
<script is:inline src="/scripts/refresh-styles.js"></script>
<script is:inline>
	console.log("Refreshing theme in the index page");
	refreshTheme();
</script>
