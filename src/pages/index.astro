---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import LinkedinIcon from "../components/Icons/Linkedin.astro";
import GithubIcon from "../components/Icons/Github.astro";
import MailIcon from "../components/Icons/Mail.astro";
import BriefCaseIcon from "../components/Icons/BriefCase.astro";
import FileCodeIcon from "../components/Icons/FileCode.astro"
import SocialMedia from "../components/SocialMedia.astro";
import Experience from "../components/Experience.astro";
import Container from "../components/Container.astro"
import Projects from "../components/Projects.astro"
---

<Layout
	title="Portfolio's Mateo Velilla"
	description="Portfolio and blog of Mateo Velilla"
>
	<main class="px-4">
		<Container class="pt-32 pb-12">
			<div class="w-full flex pb-4 items-center justify-start gap-x-2">
				<img
					src="data:image/jpeg;base64,"
					alt="logo"
					class="rounded-full size-24 mb-4 "
				/>
				<h1
					class="dar:text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-col text-left gap-x-2 pb-6 lg:pb-10"
				>
					Hi, I'm Mateo Velilla
					<Badge>Working at Propelus</Badge>
				</h1>
			</div>
			<h2 class="dark:text-white text-xl lg:text-2xl text-wrap max-w-[700px] opacity-90">
				<span class="font-bold">+8 years of experience.</span>
				<span class="text-orange-400 font-bold dark:text-orange-200">Full Stack Developer.</span> From Colombia
				ðŸ‡¨ðŸ‡´. I'm focus to create <span class="text-orange-400 dark:text-orange-200"
					>low-latency, distributed, and fault-tolerant systems.</span
				>
			</h2>
			<nav class="flex gap-2 mt-4 flex-wrap text-white">
				<SocialMedia
					href="https://www.linkedin.com/in/mateo-velilla-ospina/"
				>
					<LinkedinIcon class="size-4 md:size-6" />
					Linkedin
				</SocialMedia>
				<SocialMedia
					href="https://github.com/mateovelilla"
				>
					<GithubIcon
						class="size-4 md:size-6"
					/>
					Github
				</SocialMedia>
				<SocialMedia
				href="mailto:teovelilla@gmail.com"
			>
				<MailIcon
					class="size-4 md:size-6"
				/>
				teovelilla@gmail.com
			</SocialMedia>
			</nav>
		</Container>
		<Container id="experience">
			<h2 class="dark:text-white text-3xl font-semibold mb-4 flex gap-x-3 items-center">
				<BriefCaseIcon class="size-6 dark:text-white-300"/>
				Experience 
			</h2>
			<Experience/>
		</Container>
		<Container id="projects">
			<h2 class="dark:text-white text-3xl font-semibold mb-4 flex gap-x-3 items-center">
				<FileCodeIcon class="size-7"/>
				Projects 
			</h2>
			<Projects/>
		</Container>
	</main>
</Layout>
