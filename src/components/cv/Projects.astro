---
import Section from "./Section.astro";
import { projects } from "@/../cv.json";
---

<Section title="Projects">
    <ul>
        {
            projects.map(({ url, description, name, technologies }) => {
                return (
                    <li>
                        <article>
                            <header>
                                <a href={url}>
                                    <h3>{name}</h3>
                                </a>
                                <p>{description}</p>
                            </header>
                            <footer>
                                {technologies.map((technology) => {
                                    return <span>{technology}</span>;
                                })}
                            </footer>
                        </article>
                    </li>
                );
            })
        }
    </ul>
</Section>
<style>
    ul {
        display: grid;
        grid-column: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }
    article {
        border-radius: 8px;
        border: 1px solid #f2f2f2;
        gap: 16px;
        display: flex;
        flex-direction: column;
        padding: 16px;
        height: 100%;
    }
    article header {
        flex: 1;
    }
    article h3 {
        margin-bottom: 4px;
    }
    article a {
        color: #111;
    }
    article a:hover {
        text-decoration: underline;
    }
