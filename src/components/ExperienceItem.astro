---
interface Props {
    date: string;
    title: string;
    description: string;
    link?: string;
}
const { date, title, description, link } = Astro.props;
import RightArrow from './Icons/RightArrow.astro';
---

<div
    class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time
    class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
    >{date}</time
>
<h3 class="text-lg font-semibold text-orange-200 mt-4">
    {title}
</h3>
<p class="mb-4 text-base font-normal text-gray-200 text-balance">
    {description}
</p>
{
    link && (
        <a
            href={link}
            class="
                inline-flex
                items-center
                rounded-lg
                bg-white/10
                px-4
                py-2
                border
                border-white/10
                text-base
            "
            target="_blank"
            rel="noopener noreferrer"
        >
            Learn more{" "}
            <RightArrow/>
        </a>
    )
}
