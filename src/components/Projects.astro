---
import CSSIcon from "../components/Icons/CSS.astro";
import HTMLIcon from "../components/Icons/HTML.astro";
import JavascriptIcon from "../components/Icons/Javascript.astro";
const TECNHOLOGIES = {
    CSS: {
        name: "CSS",
        class: "",
        icon: CSSIcon,
    },
    HTML: {
        name: "HTML",
        class: "",
        icon: HTMLIcon,
    },
    Javascript: {
        name: "Javascript",
        class: "",
        icon: JavascriptIcon,
    },
};
const PROJECTS = [
    {
        title: "Example title - Build websites events faster",
        description:
            "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum dui tellus, commodo et lectus quis, aliquam gravida lorem. Morbi iaculis, arcu sed interdum imperdiet, magna ex mattis neque, et rutrum libero tortor ac nibh. Mauris et lorem nulla. Ut non tortor sem.",
        link: "https://flowbite.com/",
        github: "https://github.com/themesberg/flowbite",
        image: "/images/projects/project-1.webp",
        tags: [TECNHOLOGIES.HTML, TECNHOLOGIES.CSS, TECNHOLOGIES.Javascript],
    },
];
---

<div class="flex flex-col gap-y-16">
    {
        PROJECTS.map(({ title, description, link, image, tags }) => (
            <article>
                <h3 class="text-2xl font-semibold text-orange-200 mb-2">
                    {title}
                </h3>
                <div class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
                    <div class="w-full md:w-1/2">
                        <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
                            <a href="https://x.com/"      target="_blank"
            rel="noopener noreferrer">

                            <img
                                alt="Recién llegado vs 5 años en Nueva Zelanda"
                                class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
                                loading="lazy"
                                src={image}
                            />
            </a>
                        </div>
                        <div class="flex flex-wrap mt-3">
                            <ul class="flex gap-x-2 flex-row pb-4">
                                {tags.map((tag) => (
                                    <li>
                                        <span
                                            class={`
                                        flex
                                        gap-x-2
                                        rounded-full
                                        text-xs
                                        ${tag.class}
                                        py-1
                                        px-2
                                        bg-white/10
                                    `}
                                        >
                                            <tag.icon class="size-4" />
                                            {tag.name}
                                        </span>
                                    </li>
                                ))}
                            </ul>
                        </div>
                    </div>
                    <div class="w-full md:w-1/2 md:max-w-lg">
                        <div class="mt-2 text-gray-700 dark:text-gray-400">
                            {description}
                        </div>
                    </div>
                </div>
            </article>
        ))
    }
</div>
