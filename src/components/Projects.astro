                                href="https://x.com/"
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                <img
                                    alt="Recién llegado vs 5 años en Nueva Zelanda"
                                    class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
                                    loading="lazy"
                                    src={image}
                                />
                            </a>
                        </div>
                        <div class="flex flex-wrap mt-3">
                            <ul class="flex gap-x-2 flex-row pb-4">
                                {tags.map((tag) => (
                                    <li>
                                        <span
                                            class={`
                                        flex
                                        gap-x-2
                                        rounded-full
                                        text-xs
                                        ${tag.class}
                                        py-1
                                        px-2
                                        bg-white/10
                                    `}
                                        >
                                            <tag.icon class="size-4" />
                                            {tag.name}
                                        </span>
                                    </li>
                                ))}
                            </ul>
                        </div>
                    </div>
                    <div class="w-full md:w-1/2 md:max-w-lg">
                        <div class="dark:text-white">{description}</div>
                        <a
                            href={link}
                            class="
                                rounded-lg
                                px-4
                                py-2
                                border
                                border-white/10
                                text-base
                                flex
                                bg-orange-300/30
                                dark:bg-white/10
                                hover:bg-orange-200
                                dark:hover:bg-orange-200
                                dark:hover:text-black
                                gap-x-3
                                w-24
                                items-center
                            "
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            <Github class="size-4"></Github>
                            {" Code"}
                        </a>
                    </div>
                </div>
            </article>
        ))
    }
</div>
